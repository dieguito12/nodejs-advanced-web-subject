<div class="row">
    <form action="/movies/create" method="POST" enctype="multipart/form-data">
    {{#if invalidName}}
    <div class="form-group has-error has-feedback">
    {{else}}
    <div class="form-group">
    {{/if}}
        <label for="{{idNameField}}">Name</label>
        <input type="text" class="form-control" name="{{idNameField}}" id="{{idNameField}}" value="{{name}}">
        <span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
    </div>
    {{#if invalidDescription}}
    <div class="form-group has-error has-feedback">
    {{else}}
    <div class="form-group">
    {{/if}}
        <label for="{{idDescriptionField}}">Description</label>
        <textarea class="form-control" rows="10" name="{{idDescriptionField}}" id="{{idDescriptionField}}">{{description}}</textarea>
        <span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
    </div>
    {{#if invalidKeywords}}
    <div class="form-group has-error has-feedback">
    {{else}}
    <div class="form-group">
    {{/if}}
        <label for="{{idKeywordsField}}">Keywords</label>
        <input class="form-control" type="text" value="{{keywords}}" name="{{idKeywordsField}}" data-role="tagsinput" id="{{idKeywordsField}}">
        <span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
    </div>
    {{#if invalidImage}}
    <div class="form-group has-error has-feedback">
    {{else}}
    <div class="form-group">
    {{/if}}
        <label for="{{idImageField}}">Image</label>
        <input type="file" name="{{idImageField}}" id="{{idImageField}}">
        <span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
        <p class="help-block">{{imageHelperDescription}}</p>
    </div>
    <button type="submit" class="btn btn-default">{{buttonText}}</button>
    </form>
</div>